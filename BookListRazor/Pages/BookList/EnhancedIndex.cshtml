@page
@model BookListRazor.Pages.BookList.EnhancedIndexModel

<br />

<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Book List</h2>
    </div>

    <div class="col-3">
        <a class="btn btn-info form-control text-white" asp-page="Upsert">Add(Upsert) Book</a>
    </div>


    <div class="col-12 p-3">
        <br />
        <span class="h3 text-info text-center">Using API calls, Customized Table with alerts & Notification</span>
        <br /><br />
    </div>
    <div class="col-12 border p-3">
        @* Booktbl loads using JS *@
        <table id="Booktbl" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Author</th>
                    <th>ISBN </th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>

</div>

@section Scripts{
    <script src="~/js/bookList.js"></script>
}

